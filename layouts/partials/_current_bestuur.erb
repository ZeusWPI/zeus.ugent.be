<table class="table board-table">
  <thead>
    <tr>
      <th data-i18n='about.about_zeus.board.function'></th>
      <th data-i18n='about.about_zeus.board.name'></th>
      <th data-i18n='about.about_zeus.board.email'></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% current_bestuur.each do |lid| %>
    <tr>
      <td>
        <%= lid[:rol] %>
      </td>
      <td>
        <%= lid[:naam] %>
      </td>
      <td>
        <%= lid[:mail] %>
      </td>
      <td>
        <% if lid[:mail] %>
        <a href="mailto:<%= lid[:mail] %>">
          <%= fa :envelope %>
        </a>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>