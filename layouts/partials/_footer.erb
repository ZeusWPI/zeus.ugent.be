<footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <p class="is-hidden-tablet">
        <a class="icon" href="https://github.com/ZeusWPI" target="_blank">
          <span class="icon">
            <%= fa :github %>
          </span>
        </a>
        <a class="icon" href="https://www.facebook.com/zeus.wpi/" target="_blank">
          <span class="icon">
            <%= fa :facebook %>
          </span>
        </a>
        <a class="icon" href="/feed.xml" target="_blank">
          <span class="icon">
            <%= fa :rss %>
          </span>
        </a>
        <a class="icon" href="/ical.ics">
          <span class="icon">
            <%= fa :calendar %>
          </span>
        </a>
      </p>
      <p>
        <%= t('footer.text', heart: fa(:heart, class: 'heart')) %>
      </p>
      <p>
        <a href="https://github.com/ZeusWPI/zeus.ugent.be">
          <span class="hidden-xs"> <%= t('footer.github')%> </span>
          <%= fa :github %>
        </a> |
        <a href="/about/privacy">
          <span class="hidden-xs"><%= t('footer.privacy')%></span>
          <%= fa :'user-secret' %>
        </a> |
        <a href="/.well-known/security.txt">
          <span class="hidden-xs"><%= t('footer.rdp')%></span>
          <%= fa :'lock' %>
        </a>        
      </p>
      <p class="compiled_at">
        <%= t('footer.compiled_at', time: l($tz.now, format: :short)) %>
      </p>
    </div>
  </div>
</footer>
