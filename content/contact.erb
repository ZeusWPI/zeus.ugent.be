navigable: true
title: Contact
order: 10
narrow_page: true
icon_size: 2x
contact_links:
  - icon: facebook
    link: https://www.facebook.com/zeus.wpi/
    description: Facebook
    action: Like us
  - icon: envelope
    link: ../contact#board
    description: Email
    action: Mail us
  - icon: twitter
    link: https://twitter.com/zeuswpi
