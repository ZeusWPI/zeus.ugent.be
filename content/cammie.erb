---
navigable: true
title: navigation.cammie
---
<% content_for :scripts do %>
<script src="https://code.jquery.com/jquery-3.0.0.min.js" charset="utf-8"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js" integrity="sha256-ohm5bQuo4yRByZrO3JFkHnUxob0EsucKvzTA4ZUQ87g=" crossorigin="anonymous"></script>
<script type="text/javascript" charset="utf-8">
</script>
<%= asset :js, :cammie %>
<%= asset :js, :message %>
<% end %>

<section id="cammie-section">
  <div id="cammieFeedDisconnected" class="notification is-danger is-light is-hidden">
    <span data-i18n="cammie.feed_disconnected_1"></span>
    <br>
    <span data-i18n="cammie.feed_disconnected_2"></span>
  </div>
  <div id="cammie-body">
    <figure class="image is-16by9">
      <img id="cammie-feed" alt="cammie" src="https://kelder.zeus.ugent.be/camera/cammie" onerror="cammie_error()" onload="cammie_loaded()">
    </figure>
    <div id="cammie-ctrls">
      <div class="columns is-mobile">
        <div class="column is-1 ctrl diag left" data-command="set_relative_pos" data-x="-10" data-y="10">
          <%= fa 'chevron-circle-left' %>
        </div>
        <div class="column ctrl center" data-command="set_relative_pos" data-x="0" data-y="10">
          <%= fa 'chevron-circle-up' %>
        </div>
        <div class="column is-1 ctrl diag right" data-command="set_relative_pos" data-x="10" data-y="10">
          <%= fa 'chevron-circle-up' %>
        </div>
      </div>

      <div class="columns center is-mobile">
        <div class="column is-1 ctrl left" data-command="set_relative_pos" data-x="-10" data-y="0">
          <%= fa 'chevron-circle-left' %>
        </div>
        <div class="column">
          <!-- blank space -->
        </div>
        <div class="column is-1 ctrl right" data-command="set_relative_pos" data-x="10" data-y="0">
          <%= fa 'chevron-circle-right' %>
        </div>
      </div>

      <div class="columns is-mobile">
        <div class="column is-1 ctrl diag left" data-command="set_relative_pos" data-x="-10" data-y="-10">
          <%= fa 'chevron-circle-down' %>
        </div>
        <div class="column ctrl center" data-command="set_relative_pos" data-x="0" data-y="-10">
          <%= fa 'chevron-circle-down' %>
        </div>
        <div class="column is-1 ctrl diag right" data-command="set_relative_pos" data-x="10" data-y="-10">
          <%= fa 'chevron-circle-right' %>
        </div>
      </div>
    </div>
  </div>

  <nav id="cammie-ctrls-2" class="columns mt-0">
    <div class="column">
      <button data-i18n='cammie.controls.small_table' class="button is-primary is-full-width ctrl" data-command="set_pos" data-x="43" data-y="15">
      </button>
    </div>
    <div class="column">
      <button data-i18n="cammie.controls.big_table" class="button is-primary is-full-width ctrl" data-command="set_pos" data-x="32" data-y="6">
      </button>
    </div>
    <div class="column">
      <button data-i18n="cammie.controls.couch" class="button is-primary is-full-width ctrl" data-command="set_pos" data-x="64" data-y="10">
      </button>
    </div>
    <div class="column">
      <button data-i18n="cammie.controls.door" class="button is-primary is-full-width ctrl" data-command="set_pos" data-x="30" data-y="4">
      </button>
    </div>
    <% if christmastime? %>
      <div class="column">
        <button data-i18n="cammie.controls.christmastime" class="button is-primary is-full-width ctrl" data-command="set_pos" data-x="-110" data-y="25">
        </button>
      </div>
    <% end %>
  </nav>

  <div class="columns">
    <div class="column is-12">
      <form id="cammieForm">

        <!-- Response Error -->
        <div id="cammieFormResponseError" class="notification is-danger is-light is-hidden"></div>

        <!-- Response Success -->
        <div id="cammieFormResponseSuccess" class="notification is-success is-light is-hidden"></div>

        <!-- No username modal -->
        <div id="cammieFormModal" class="modal">
          <div class="modal-background"></div>
          <div class="modal-card">
            <header class="modal-card-head">
              <p data-i18n="cammie.message.empty_username.title" class="modal-card-title"></p>
            </header>
            <section class="modal-card-body">
              <p data-i18n="cammie.message.empty_username.content_1"></p>
              <p data-i18n="cammie.message.empty_username.content_2"></p>
              <div class="column">
                <input id="cammieModalName" class="input is-medium is-full-width" name="name" type="text" placeholder="Name" />
              </div>
            </section>
            <footer class="modal-card-foot">
              <div class="buttons">
                <button data-i18n="cammie.message.send" id="cammieModalSend" type="button" class="button is-primary"></button>
                <button data-i18n="cammie.message.empty_username.cancel" id="cammieModalCancel" type="button" class="button"></button>
              </div>
            </footer>
          </div>
        </div>

        <nav class="columns mt-0">
          <div class="column">
            <input data-i18n-placeholder="cammie.message.name_placeholder" id="cammieFormName" class="input is-medium is-full-width" name="name" type="text" placeholder="" />
          </div>
          <div class="column is-half">
            <input data-i18n-placeholder="cammie.message.message_placeholder" id="cammieFormMessage" class="input is-medium is-full-width" name="message" type="text" placeholder="" />
          </div>
          <div class="column">
            <button data-i18n="cammie.message.send" class="button is-medium is-primary is-full-width" type="submit">
            </button>
          </div>
        </nav>
      </form>
    </div>
  </div>
</section>
